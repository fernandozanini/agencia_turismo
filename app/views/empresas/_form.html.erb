<%= form_with(model: empresa, local: true) do |form| %>
<% if empresa.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(empresa.errors.count, "error") %> impediram de ser salvo:</h2>

  <ul>
    <% empresa.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :nome %>
  <%= form.text_field :nome, required: true %>
</div>

<div class="field">
  <%= form.label :ativo %>
  <%= form.check_box :ativo %>
</div>

<div class="field">
  <%= form.label :observacao %>
  <%= form.text_field :observacao %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>