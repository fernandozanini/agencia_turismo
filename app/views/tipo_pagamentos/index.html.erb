<p id="notice"><%= notice %></p>
<%= link_to 'Novo Tipo de Pagamento', new_tipo_pagamento_path %>

<h1>Tipo Pagamentos</h1>

<table class="lista-tabela-index">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ativo</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_pagamentos.each do |tipo_pagamento| %>
    <tr>
      <td><%= tipo_pagamento.nome %></td>
      <td class="texto-centralizado"><%= retornar_sim_nao(tipo_pagamento.ativo) %></td>
      <td><%= tipo_pagamento.observacao %></td>
      <td class="coluna-acoes-tabela">
        <%= link_to  tipo_pagamento_path(tipo_pagamento), { class: 'acoes-tabelas'} do %>
        <svg class="ico">
          <use xlink:href="<%= asset_path("ico.svg#olho") %>" />
        </svg>
        <% end %>
      </td>
      <td class="coluna-acoes-tabela">
        <%= link_to edit_tipo_pagamento_path(tipo_pagamento) , { class: 'acoes-tabelas'} do %>
        <svg class="ico">
          <use xlink:href="<%= asset_path("ico.svg#lapis") %>" />
        </svg>
        <% end %>
      </td>
      <td class="coluna-acoes-tabela">
        <%= link_to tipo_pagamento_path(tipo_pagamento), { class: 'acoes-tabelas', method: :delete, data: { confirm: 'Você tem certeza?' } } do%>
        <svg class="ico">
          <use xlink:href="<%= asset_path("ico.svg#lixo-1") %>" />
        </svg>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>