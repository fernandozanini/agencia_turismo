<%= form_with(model: site, local: true) do |form| %>
<% if site.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

  <ul>
    <% site.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :nome %>
  <%= form.text_field :nome, required: true %>
</div>

<div class="field">
  <%= form.label :url %>
  <%= form.text_field :url, required: true %>
</div>

<div class="field">
  <%= form.label :codigo, 'Código' %>
  <%= form.text_field :codigo, placeholder: 'Caso possua mais de um código, separar por ponto e vígula', title: 'Caso possua mais de um código, separar por ponto e vígula' %>
</div>

<div class="field">
  <%= form.label :teto_pontuacao, 'Teto de Pontuação/ Ratio Mínimo' %>
  <%= form.text_field :teto_pontuacao, required: true %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>