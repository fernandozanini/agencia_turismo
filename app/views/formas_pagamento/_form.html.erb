<%= form_with(model: forma_pagamento, local: true) do |form| %>
<% if forma_pagamento.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(forma_pagamento.errors.count, "error") %> impediram de salvar:</h2>

  <ul>
    <% forma_pagamento.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= form.label :nome %>
  <%= form.text_field :nome %>
</div>

<div class="field">
  <%= form.label :ativo %>
  <%= form.check_box :ativo %>
</div>

<div class="field">
  <%= form.label :observacao %>
  <%= form.text_field :observacao %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>