<p id="notice"><%= notice %></p>
<%= link_to 'Nova Forma Pagamento', new_forma_pagamento_path %>

<h1>Formas Pagamento</h1>

<table class="lista-tabela-index">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ativo</th>
      <th>Observação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @formas_pagamento.each do |forma_pagamento| %>
    <tr>
      <td><%= forma_pagamento.nome %></td>
      <td class="texto-centralizado"><%= retornar_sim_nao(forma_pagamento.ativo) %></td>
      <td><%= forma_pagamento.observacao %></td>
      <td class="coluna-acoes-tabela">
        <%= link_to  forma_pagamento_path(forma_pagamento), { class: 'acoes-tabelas'} do %>
        <svg class="ico">
          <use xlink:href="<%= asset_path("ico.svg#olho") %>" />
        </svg>
        <% end %>
      </td>
      <td class="coluna-acoes-tabela">
        <%= link_to edit_forma_pagamento_path(forma_pagamento) , { class: 'acoes-tabelas'} do %>
        <svg class="ico">
          <use xlink:href="<%= asset_path("ico.svg#lapis") %>" />
        </svg>
        <% end %>
      </td>
      <td class="coluna-acoes-tabela">
        <%= link_to forma_pagamento_path(forma_pagamento), { class: 'acoes-tabelas', method: :delete, data: { confirm: 'Você tem certeza?' } } do%>
        <svg class="ico">
          <use xlink:href="<%= asset_path("ico.svg#lixo-1") %>" />
        </svg>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>